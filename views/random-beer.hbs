{{#each data}}
<div class="random">
    <div class="random-img">
        <img src="{{this.image_url}}" alt="image_url">
    </div>
    <div class="random-data">
        <p id="random-name">{{this.name}}</p>
        <p id="random-tagline">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <p><b>Food pairing</b></p>
        <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers Tips: </b> {{this.brewers_tips}}</p>
    </div>
</div>
{{/each}}
